datasource db {
  provider = "sqlite" // ou "postgresql" / "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id       Int       @id @default(autoincrement())
  nome     String
  email    String    @unique
  password String
  tipo     String    // "cliente" ou "adm"

  reservas Reserva[]
}

model Reserva {
  id         Int      @id @default(autoincrement())
  usuario_id Int
  mesa_id    Int
  data       DateTime
  n_pessoas  Int
  status     Boolean  @default(false)

  usuario Usuario @relation(fields: [usuario_id], references: [id])
  mesa    Mesa    @relation(fields: [mesa_id], references: [id])
}

model Mesa {
  id        Int       @id @default(autoincrement())
  codigo    String
  n_lugares Int

  reservas Reserva[]
}
